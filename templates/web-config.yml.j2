{% if install_prometheus__ssl | default(false) %}
tls_server_config:
  cert_file: "{{ install_prometheus__ssl_crt }}"
  key_file: "{{ install_prometheus__ssl_key }}"
{% endif %}

{% if install_prometheus__basic_auth | default(false) %}
basic_auth_users:
  {{ install_prometheus__basic_auth_login }}: "{{ install_prometheus__basic_auth_password_hash }}"
{% endif %}

